	{% extends "layout.html.twig" %}
		{% block title %}Liste des users{% endblock %}

		{% block content %}
            <h2>Liste des utilisateurs</h2> 
            <ul>
			{% for user in users %}
			<li>
				<h2>{{ user.username }}</h2>

				{#  
					on utilise path() pour générer les urls vers chaque page d'auteur
					il y a une partie dynamique dans cet url, on le précise en lui disant que la partie dynamique déclarée dans la route s'appelle id et est égale à l'id de l'utilisateur donc user.id ce qui donne	{id: user.id}
				#}
				<p><a href="{{ path('voirUser', {id: user.id}) }}">Voir</a>{% if is_granted('ROLE_ADMIN') %}|<a href="{{ path('updateUser', {id: user.id})}}">modifier</a>|
					<a href="{{ path('deleteUser', {id: user.id})}}">Supprimer</a>
				{% endif %}
				</p>
			</li>
			{% endfor %}
            </ul>
		{% endblock %}

		