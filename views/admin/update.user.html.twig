{% extends "layout.html.twig" %}
{% block title %}Modifier utlisateur{% endblock %}

{% block content %}
{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
{% endfor %}
{{ form_start(articleForm)}}
    
    <div class="form-group">
        {{ form_label(articleForm.username) }}
        {{ form_errors(articleForm.username) }}
        {{ form_widget(articleForm.username) }}                
    </div>
    <div class="form-group">            
        {{ form_label(articleForm.email) }}
        {{ form_errors(articleForm.email) }}                
        {{ form_widget(articleForm.email) }}
    </div>
    <div class="form-group">
        {{ form_label(articleForm.phone) }}
        {{ form_errors(articleForm.phone) }}                
        {{ form_widget(articleForm.phone) }}
    </div>
    <div class="form-group">
        {{ form_widget(articleForm.password)}}
    </div>        
    <div class="form-group">
        {{ form_label(articleForm.role) }}
        {{ form_errors(articleForm.role) }}                
        {{ form_widget(articleForm.role) }}
    </div>
    {{ form_widget(articleForm.register)}}

{{ form_end(articleForm)}}
{% endblock %}