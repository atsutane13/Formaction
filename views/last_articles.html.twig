{% extends "layout.html.twig" %}
	
	{% block title %}5 derniers article{% endblock %}
	
	{% block content %}
			<h2>Mes articles</h2>
			{% for article in articles %}
			<article>
				<h2>{{ article.title }}</h2>
				<p>{{ article.content }}</p>
				<p><a href="{{ path('voirArticle', {id: article.id}) }}">Voir</a>
					{% if token is defined and token.id == article.author %}
					| <a href="{{ path('deleteArticle', {id: article.id}) }}">Supprimer</a>

				{% endif %}</p>
			</article>
			{% endfor %}
		{% endblock %}