{% extends "layout.html.twig" %}

	{%  block css %}
	<link rel="stylesheet" href="{{ asset('category/assets/css/main.css') }}" />
	<link rel="stylesheet" href="{{ asset('css/style.css')}}" /> 
	{% endblock %}

		{% block title %}page de connexion{% endblock %}

        {% block content %}

        <header class="major">
            <h2>Login</h2>
        </header>

        {% if error %}
        <div class="alert alert-danger">
            <strong>Login failed!</strong> {{ error }}
        </div>
        {% endif %}
        <div class="login">
            <form role="form" action="{{ path('login_check') }}" method="post" class="form-admin">                    
            <div>
                <input type="text" name="_username" value="{{ last_username }}" class="formulaire" placeholder="Entré votre nom d'utilisateur " required autofocus>                   
            </div>          
            <div>
                <input type="password" name="_password" class="formulaire" placeholder="Entré votre mot de passe" required>
            </div>

            <div class="btn">
                <input type="submit" value="Envoyer" class=" form-btn">
            </div>

            </form>
        </div>
		{% endblock %}

		{# commentaires #}

		